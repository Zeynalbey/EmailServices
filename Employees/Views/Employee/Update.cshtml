@using Employees.ViewModels.Update
@model UpdateResponseViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


<body class="bg-dark">
    <div class="row justify-content-center">
        <a asp-controller="employee" asp-action="home" target="_blank" class="btn btn-success">Employees</a>
    </div>

    <form method="POST" asp-controller="employee" asp-action="update" asp-route-id="@Model.Code">

        <div class="container">
            <div class="form-group p-1">
                <label asp-for="FirstName" class="text-white">FirstName</label>
                <input asp-for="FirstName" type="text" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group p-1">
                <label asp-for="LastName" class="text-white">Lastname</label>
                <input asp-for="LastName" type="text" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group p-1">
                <label asp-for="FatherName" class="text-white">Father name</label>
                <input asp-for="FatherName" type="text" class="form-control">
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>

            <div class="form-group p-1">
                <label asp-for="Fincode" class="text-white">Fincode</label>
                <input asp-for="Fincode" type="text" class="form-control">
                <span asp-validation-for="Fincode" class="text-danger"></span>
            </div>

            <div class="form-group p-1">
                <label asp-for="Email" class="text-white">Email</label>
                <input asp-for="Email" type="text" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>


    </form>

</body>


