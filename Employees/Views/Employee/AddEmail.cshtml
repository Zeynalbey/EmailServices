@using Notification.ViewModel
@model NotificationAddModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


<body class="bg-dark">
    <div class="">
        <a asp-controller="employee" asp-action="email" target="_blank"></a>
    </div>

    <form method="POST" asp-controller="employee" asp-action="addEmail">

        <div class="container">
            <div class="form-group p-1">
                <label asp-for="TargetEmail" class="text-white">TargetEmail</label>
                <input asp-for="TargetEmail" type="text" class="form-control">
                <span asp-validation-for="TargetEmail" class="text-danger"></span>
            </div>

            <div class="form-group p-1">
                <label asp-for="Content" class="text-white">Content</label>
                <input asp-for="Content" type="text" class="form-control">
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group p-1">
                <label asp-for="Title" class="text-white">Title</label>
                <input asp-for="Title" type="text" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>


    </form>

</body>

